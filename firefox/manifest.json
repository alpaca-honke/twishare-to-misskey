{
    "manifest_version": 3,
    "default_locale": "en",
    "name":"Twishare to Misskey",
    "version":"0.4.3",
    "description":"__MSG_Description__",
    "browser_specific_settings": {
        "gecko": {
            "id": "twishare-to-misskey@alpaca-honke.github.io"
        },
        "gecko_android": {
            "id": "twishare-to-misskey@alpaca-honke.github.io"
        }
    },
    "icons":{
        "16":"icons/16.png", 
        "48":"icons/48.png",
        "128":"icons/128.png"
    },
    "content_scripts":[
        {
            "run_at":"document_start",
            "matches":["https://x.com/intent/tweet*", "http://x.com/intent/tweet*", "http://x.com/intent/post*", "https://x.com/intent/post*"],
            "js":["js_and_css/on_twitter_intent.js"]
        },
        {
            "run_at": "document_end",
            "matches": ["<all_urls>"],
            "js": ["js_and_css/allpages.js"],
            "css": ["js_and_css/allpages.css"]
        }
    ],
    "background": {
        "scripts": ["js_and_css/background.js"]
    },
    "action": {
        "default_icon": {
            "16": "icons/16.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        },
        "default_title": "__MSG_PopupTitle__",
        "default_popup": "options/options.html"
    },
    "options_ui": {
        "page": "options/options.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/share.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "author":"Alkappa/alpaca-honke",
    "homepage_url":"https://alpaca-honke.github.io/twishare-to-misskey/"
}
